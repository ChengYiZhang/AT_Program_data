#include <mega168.h>
#include <delay.h>
// Declare your global variables here

#define     MOSI            PINB.4
#define     CS              PORTC.3
#define     SCK             PORTB.5

#define     CHANNAEL1       1
#define     CHANNAEL2       2


unsigned long val=0;
unsigned long read_adc(unsigned char _dat)
{
    unsigned long i=0;       
    CS = 0; 
    for(i=0; i<24; i++)     
    {
        SCK = 0;        delay_us(100);
        if(MOSI)        val |= (0x01<<i); 
        else            val |= (0x00<<i);
        SCK = 1;        delay_us(100);
    }
    CS = 1;
    delay_ms(1);
    CS = 0;
    delay_ms(1);
    CS = 1;                    
    return (val);
}
